<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="#598BB1" android:endColor="#598BB1"/>
			<stroke android:width="1dip" android:color="#70B2B2B2" />
			<corners android:radius="5dp" />
			<padding android:left="4dp" android:top="4dp"
				android:right="4dp" android:bottom="4dp" />
		</shape>
	</item>

	<item android:state_pressed="false">
		<shape>
			<gradient android:centerColor="#80C8FE" android:endColor="#80C8FE" android:startColor="#80C8FE"/>
			<stroke android:width="1dip" android:color="#70B2B2B2" />  <!-- 边框 -->
			<corners android:radius="10dip" />  <!-- 拐角 -->
			<padding android:left="4dp" android:top="4dp"
				android:right="4dp" android:bottom="4dp" />
		</shape>
	</item>

</selector>
